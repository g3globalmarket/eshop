# NomadNet E-Commerce Platform - Environment Variables
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# Database Configuration
DATABASE_URL=mongodb://localhost:27017/eshop

# Authentication & Security
JWT_SECRET=your-jwt-secret-key-change-in-production
JWT_EXPIRES_IN=7d

# Redis Configuration
REDIS_URL=redis://localhost:6379

# QPay Payment Gateway
QPAY_BASE_URL=https://merchant.qpay.mn
QPAY_USERNAME=your-qpay-username
QPAY_PASSWORD=your-qpay-password
QPAY_INVOICE_CODE=your-invoice-code
QPAY_USD_TO_MNT_RATE=3400
QPAY_CALLBACK_PUBLIC_BASE_URL=https://nomadnet.shop

# Stripe Payment
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
NEXT_PUBLIC_STRIPE_PUBLIC_KEY=pk_test_your-stripe-public-key

# Kafka
KAFKA_BROKERS=kafka:9092

# Next.js Public Variables
NEXT_PUBLIC_SERVER_URI=https://nomadnet.shop
NEXT_PUBLIC_CHATTING_WEBSOCKET_URI=wss://nomadnet.shop/ws-chatting
NEXT_PUBLIC_SELLER_SERVER_URI=https://sellers.nomadnet.shop

# Docker
DOCKER_USERNAME=your-dockerhub-username

# Node Environment
NODE_ENV=development
